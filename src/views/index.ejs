<!DOCTYPE html>
<html>
  <%- include("../partials/head.ejs") %>

  <body>
    <!-- Navbar (sit on top) -->
    <%- include("../partials/navbar.ejs") %>


    <!-- Header -->
    <%- include("../partials/header.ejs") %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
     

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />
          <div>
            <% if (platos.length) { %> 
              <% platos.map(plato => { %>
                <h4><%= plato.nombre %> </h4>
                <p class="ps-text-grey">
                  <%= plato.descripcion %>
                </p>
                <p>$ <%= plato.precio %></p>
                <a href="/detalle/<%=plato.id%>">Ver plato</a>
              <% } ) %>
              <%  } else { %> 
                <p>Proximamente nuevos platos</p>
                <% }  %>
            
          </div>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include("../partials/footer.ejs") %>

    </div>
  </body>
</html>
