<!DOCTYPE html>
<html>
<%- include("../partials/head.ejs") %>

  <body>
    <!-- Navbar (sit on top) -->
    <%- include("../partials/navbar.ejs") %>


      <!-- Header -->
      <%- include("../partials/header.ejs") %>


        <!-- Page content -->
        <div class="ps-content">

          <!-- Menu Section -->
          <% if(plato){ %>
            <div class="ps-row ps-padding-64" id="menu">
              <div class="ps-col l6 ps-padding-large">
                <article>
                  <h2 class="ps-center">
                    <%= plato.nombre%>
                  </h2>
                  <div>
                    <h6>
                      <%= (plato.descripcion) ? plato.descripcion : "Plato tipico" %>
                    </h6>
                    <span  class="ps-text-grey">
                      <%= plato.precio%>
                    </span>
                  </div>
                </article>
              </div>
              <div class="ps-col l6 ps-padding-large ps-img-menu">
                <img src="<%=plato.img%>" class="ps-round ps-image ps-opacity-min" alt="<%=(plato.descripcion) ? plato.descripcion : "Plato tipico" %>" />
              </div>



            </div>
          <% } else {%>
            <h2>No existe ese plato</h2>
          <% } %>

          <!-- Footer -->
          <%- include("../partials/footer.ejs") %>

        </div>
  </body>

</html>